<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mitchell.mrpotatohead.MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/toystoryroom"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:text="Mr. Potato"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <RelativeLayout
                android:id="@+id/relativeLandscape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <ImageView
                    android:id="@+id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/body" />

                <ImageView
                    android:id="@+id/shoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/shoes" />

                <ImageView
                    android:id="@+id/nose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/nose" />

                <ImageView
                    android:id="@+id/mouth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/mouth" />

                <ImageView
                    android:id="@+id/mustache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/mustache" />

                <ImageView
                    android:id="@+id/eyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/eyes" />

                <ImageView
                    android:id="@+id/glasses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/glasses" />

                <ImageView
                    android:id="@+id/hat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/hat" />

                <ImageView
                    android:id="@+id/eyebrows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/eyebrows" />

                <ImageView
                    android:id="@+id/ears"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ears" />

                <ImageView
                    android:id="@+id/arms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/arms" />

            </RelativeLayout>

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp">

            <ToggleButton
                android:id="@+id/toggleButtonEyes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="eyes"
                android:textOn="eyes" />

            <ToggleButton
                android:id="@+id/toggleButtonGlasses"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="glasses"
                android:textOn="glasses" />

            <ToggleButton
                android:id="@+id/toggleButtonArms"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="arms"
                android:textOn="arms" />

            <ToggleButton
                android:id="@+id/toggleButtonHat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="hat"
                android:textOn="hat" />

            <ToggleButton
                android:id="@+id/toggleButtonShoes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="shoes"
                android:textOn="shoes" />

            <ToggleButton
                android:id="@+id/toggleButtonEars"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="ears"
                android:textOn="ears" />

            <ToggleButton
                android:id="@+id/toggleButtonEyebrows"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="eyebrows"
                android:textOn="eyebrows"
                tools:layout_editor_absoluteX="770dp"
                tools:layout_editor_absoluteY="34dp" />

            <ToggleButton
                android:id="@+id/toggleButtonMustache"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="mustache"
                android:textOn="mustache" />

            <ToggleButton
                android:id="@+id/toggleButtonMouth"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="mouth"
                android:textOn="mouth" />

            <ToggleButton
                android:id="@+id/toggleButtonNose"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_weight="1"
                android:text="ToggleButton"
                android:textOff="nose"
                android:textOn="nose" />
        </GridLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
