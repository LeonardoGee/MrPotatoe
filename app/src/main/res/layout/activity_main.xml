<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mitchell.mrpotatohead.MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/roomportrait"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mr. Potato"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="45sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="256dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/body" />

            <ImageView
                android:id="@+id/shoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/shoes"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/nose"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mouth"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/mustache"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mustache"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/eyes"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/glasses"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/hat"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/eyebrows"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ears"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/arms"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:paddingLeft="34dp">

            <ToggleButton
                android:id="@+id/toggleButtonNose"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="nose"
                android:textOn="nose" />

            <ToggleButton
                android:id="@+id/toggleButtonMouth"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="mouth"
                android:textOn="mouth"
                />

            <ToggleButton
                android:id="@+id/toggleButtonEyes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="eyes"
                android:textOn="eyes" />

            <ToggleButton
                android:id="@+id/toggleButtonGlasses"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="glasses"
                android:textOn="glasses" />

            <ToggleButton
                android:id="@+id/toggleButtonArms"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="arms"
                android:textOn="arms" />

            <ToggleButton
                android:id="@+id/toggleButtonEars"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="ears"
                android:textOn="ears" />

            <ToggleButton
                android:id="@+id/toggleButtonShoes"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="shoes"
                android:textOn="shoes" />

            <ToggleButton
                android:id="@+id/toggleButtonEyebrows"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="1"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="eyebrows"
                android:textOn="eyebrows" />

            <ToggleButton
                android:id="@+id/toggleButtonMustache"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="mustache"
                android:textOn="mustache" />

            <ToggleButton
                android:id="@+id/toggleButtonHat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:elevation="2dp"
                android:text="ToggleButton"
                android:textOff="hat"
                android:textOn="hat" />
        </GridLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
